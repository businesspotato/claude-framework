#!/bin/bash

# Claude Custom Command: Launch Multi-Agent Session
# Goal: Quick command to start multi-agent parallel development
# Usage: /launch-agents

set -e

PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." && pwd)"

echo "üöÄ Launching Multi-Agent Development Session..."
echo ""

# Check if we're in the right directory
if [ ! -f "$PROJECT_ROOT/CLAUDE.md" ]; then
    echo "‚ùå Not in project root directory"
    echo "   Please run from One Piece TCG Manager project root"
    exit 1
fi

# Change to project directory
cd "$PROJECT_ROOT"

# Run the full startup sequence
./scripts/start-multi-agent-session.sh

echo ""
echo "‚úÖ Multi-agent session launched!"
echo "üí° All agent terminals should now be open and ready for development"